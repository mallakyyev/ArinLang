@{
    ViewData["Title"] = "Index";
    SimpleWordModel mod = (SimpleWordModel)ViewBag.model;
}
@using ARINLAB.Models
@using DAL.Models.Dto
@model WordSentencesDto

<h1>Add Sentence and Voice </h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-4 items-center">

            <label class="text-success" style="font-size:30px; font-weight:600">@mod.ArabWord</label>
        </div>
        <div class=" col-4">

            <h2 class="text-success" style="font-size:30px; font-weight:600">@mod.OtherWord</h2>
        </div>
        <div class="col-2"></div>
    </div>
    <hr />
    <div class="col-12 mb-30">
        <form asp-area="ApprovedUser" asp-controller="Word" asp-action="EditWordSentence" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" value="@Model.Id">
            <input type="hidden" asp-for="WordId" value="@Model.WordId" />
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <input type="hidden" asp-for="IsApproved" value="@Model.IsApproved" />
            <input type="hidden" asp-for="ArabVoice" value="@Model.ArabVoice">
            <input type="hidden" asp-for="OtherVoice" value="@Model.OtherVoice" />
            <div class="box">
                <div class="box-head">
                    <h3 class="title">@SharedLocalizer["Edit Example Sentence"]</h3>
                </div>
                <div class="box-body">
                    <div class="row mbn-20">

                        <!--Form Field-->
                        <div class="col-lg-6 col-12 mb-20">

                            <h6 class="mb-15">Arab</h6>

                            <div class="row mbn-15">
                                <div class="col-12 mb-15"><input type="text" asp-for="ArabSentence" value="@Model.ArabSentence" class="form-control" placeholder="@SharedLocalizer["Sentence"]"></div>

                                <div class="col-12 mb-15"><textarea class="form-control" asp-for="ArabReader" value="@Model.ArabReader" placeholder="@SharedLocalizer["Transcript"]"></textarea></div>
                            </div>

                        </div>
                        <!--Form Field-->
                        <!--Readonly Field-->
                        <div class="col-lg-6 col-12 mb-20">

                            <h6 class="mb-15">@mod.DictID</h6>

                            <div class="row mbn-15">
                                <div class="col-12 mb-15"><input type="text" asp-for="OtherSentence" value="@Model.OtherSentence" class="form-control" placeholder="@SharedLocalizer["Sentence"]"></div>

                                <div class="col-12 mb-15"><textarea asp-for="OtherReader" class="form-control" value="@Model.OtherReader" placeholder="@SharedLocalizer["Transcript"]"></textarea></div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="box">
                    <div class="box-head">
                        <h3 class="title">@SharedLocalizer["Add Word Voices"]</h3>
                    </div>

                    <div class="box-body">
                        <div class="row mbn-20">

                            <!--Form Field-->
                            <div class="col-lg-6 col-12 mb-20">

                                <h6 class="mb-15">@SharedLocalizer["Arab"]</h6>

                                <div class="row mbn-15">
                                    <label class="label">@SharedLocalizer["Upload Voice file"]</label>
                                    <input asp-for="ArabVoiceForm" type="file" class="form-control" />
                                </div>

                            </div>
                            <!--Form Field-->
                            <!--Readonly Field-->
                            <div class="col-lg-6 col-12 mb-20">

                                <h6 class="mb-15">@SharedLocalizer["Turkmen"]</h6>

                                <div class="row mbn-15">
                                    <label class="label">@SharedLocalizer["Upload Voice file"]</label>
                                    <input asp-for="OtherVoiceForm" type="file" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 mb-20"><input type="submit" class="button button-primary" value="@SharedLocalizer["Edit"]"></div>
                    @*<div class="box-foot items-end">
                            <input type="submit" class="btn btn-success" value="@SharedLocalizer["Add"]"></input>
                        </div>*@
                </div>
                @*<div class="box-foot items-end">
                        <input type="submit" class="btn btn-success" value="@SharedLocalizer["Edit"]"></input>
                    </div>*@
            </div>
        </form>

    </div>

</div><div class="row">
    <div class="col-12">
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th scope="col">@SharedLocalizer["Arab Voice"]</th>
                    <th scope="col">@SharedLocalizer["Turkmen Voice"]</th>

                </tr>
            </thead>
            <tbody>
                @if (!string.IsNullOrEmpty(Model.ArabVoice) || !string.IsNullOrEmpty(Model.OtherVoice))
                {
                    <tr>
                        <td>
                            <audio id="myAudio@(@Model.Id)">
                                <source src="~/@Model.ArabVoice" type="audio/mpeg">
                            </audio>
                            <button onclick="playAudio('myAudio@(Model.Id)')">PLAY</button>
                            <button onclick="pauseAudio('myAudio@(Model.Id)')">STOP</button>
                        </td>
                        <td>
                            <audio id="myAudio@(Model.Id)_o">
                                <source src="~/@Model.OtherVoice" type="audio/mpeg">
                            </audio>
                            <button onclick="playAudio('myAudio@(Model.Id)_o')">PLAY</button>
                            <button onclick="pauseAudio('myAudio@(Model.Id)_o')">STOP</button>
                        </td>
                    </tr>

                }
                else
                {
                    <tr>
                        <td>
                            @SharedLocalizer["No data"]
                        </td>
                        <td>
                            @SharedLocalizer["No data"]
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        function playAudio(id) {

            var x = document.getElementById(id);
            x.play();
        }

        function pauseAudio(id) {

            var x = document.getElementById(id);
            x.pause();
        }
    </script>
}