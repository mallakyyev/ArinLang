@{
    ViewData["Title"] = "Index";

}
@using DAL.Models.Dto 
@model CreateWordDto
<div class="row">

    <!--Form Wizard Horizontal Start-->
    <div class="col-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h3 class="title">Words</h3>
            </div>
            <div class="box-body">
                <div class="smart-wizard">                   
                    <div>
                        <div id="step-1">
                            <form asp-area="Admin" asp-controller="Word" asp-action="Create" method="post" enctype="multipart/form-data">
                                <div class="row mbn-20">
                                    <div class="col-12 mb-20">
                                        <h4>@SharedLocalizer["Create new word"]</h4>
                                    </div>
                                    <div class="col-lg-6 col-12 mb-20"><input type="text" asp-for="OtherWord" placeholder="@SharedLocalizer["New word"]" class="form-control"></div>
                                    <div class="col-lg-6 col-12 mb-20"><input type="text" asp-for="ArabWord" placeholder="@SharedLocalizer["Arab word"]" class="form-control"></div>
                                    <div class="col-12 mb-15">
                                        <select class="form-control form-control-lg" asp-for="DictionaryId">
                                            @foreach (var item in (new List<DAL.Models.Dictionary>(ViewBag.Dicts)))
                                            {
                                                <option value="@item.Id">@item.Language</option>
                                            }
                                        </select>
                                    </div>
                                    
                                </div>
                                <div class="box">
                                    <div class="box-head">
                                        <h3 class="title">@SharedLocalizer["Add Word Voices"]</h3>
                                    </div>

                                    <div class="box-body">
                                        <div class="row mbn-20">

                                            <!--Form Field-->
                                            <div class="col-lg-6 col-12 mb-20">

                                                <h6 class="mb-15">@SharedLocalizer["Arab"]</h6>

                                                <div class="row mbn-15">
                                                    <label class="label">@SharedLocalizer["Upload Voice file"]</label>
                                                    <input asp-for="ArabVoiceForm" type="file" class="form-control" />
                                                </div>

                                            </div>
                                            <!--Form Field-->
                                            <!--Readonly Field-->
                                            <div class="col-lg-6 col-12 mb-20">

                                                <h6 class="mb-15">@SharedLocalizer["Turkmen"]</h6>

                                                <div class="row mbn-15">
                                                    <label class="label">@SharedLocalizer["Upload Voice file"]</label>
                                                    <input asp-for="OtherVoiceForm" type="file" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-12 mb-20"><input type="submit" class="button button-primary" value="@SharedLocalizer["Create"]"></div>
                                    @*<div class="box-foot items-end">
                                        <input type="submit" class="btn btn-success" value="@SharedLocalizer["Add"]"></input>
                                    </div>*@
                                </div>
                            </form>
                        </div>
                     
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--Form Wizard Horizontal End-->
    </div>
