@{
    ViewData["Title"] = "Index";

}
@using DAL.Models.Dto
@model EditWordDto
<link id="cus-style" rel="stylesheet" href="~/Admin/assets/css/style-primary.css">
<div class="row">

    <!--Form Wizard Horizontal Start-->
    <div class="col-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h3 class="title">Words</h3>
            </div>
            <div class="box-body">
                <div class="smart-wizard">
                    <div>
                        <div id="step-1">
                            <form asp-area="Admin" asp-controller="Word" asp-action="Edit" method="post" enctype="multipart/form-data">
                                <div class="row mbn-20">
                                    <div class="col-12 mb-20">
                                        <h4>@SharedLocalizer["Edit new word"]</h4>
                                    </div>
                                    <input type="hidden" asp-for="@Model.Id" value="@Model.Id">
                                    <input type="hidden" asp-for="@Model.UserId" value="@Model.UserId" />
                                    <input type="hidden" asp-for="@Model.ArabVoice" value="@Model.ArabVoice" />
                                    <input type="hidden" asp-for="@Model.OtherVoice" value="@Model.OtherVoice" />

                                    <div class="col-lg-6 col-12 mb-20"><input type="text" asp-for="@Model.OtherWord" placeholder="@SharedLocalizer["New word"]" class="form-control"></div>
                                    <div class="col-lg-6 col-12 mb-20"><input type="text" asp-for="@Model.ArabWord" placeholder="@SharedLocalizer["Arab word"]" class="form-control"></div>
                                    <div class="col-12 mb-15">
                                        <select class="form-control form-control-lg" asp-for="@Model.DictionaryId">
                                            @foreach (var item in (new List<DAL.Models.Dictionary>(ViewBag.Dictionaries)))
                                            {
                                                if (@Model.DictionaryId == item.Id)
                                                {
                                                    <option value="@item.Id" selected>@item.Language</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Id">@item.Language</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-12 mb-20">
                                        <h6 class="mb-15">@SharedLocalizer["Approve Word:"]</h6>
                                        <div class="adomx-checkbox-radio-group inline">
                                            <label class="adomx-switch success">
                                                @if (Model.IsApproved)
                                                {
                                                    <input type="checkbox" asp-for="@Model.IsApproved" checked>
                                                }
                                                else
                                                {
                                                    <input type="checkbox" asp-for="@Model.IsApproved">
                                                }
                                                <i class="lever"></i>

                                            </label>
                                        </div>
                                    </div>

                                    <div class="box">
                                        <div class="box-head">
                                            <h3 class="title">@SharedLocalizer["Add Word Voices"]</h3>
                                        </div>

                                        <div class="box-body">
                                            <div class="row mbn-20">

                                                <!--Form Field-->
                                                <div class="col-lg-6 col-12 mb-20">
                                                    <h6 class="mb-15">@SharedLocalizer["Arab"]</h6>
                                                    <div class="row mbn-15">
                                                        <label class="label">@SharedLocalizer["Upload Voice file"]</label>
                                                        <input asp-for="@Model.ArabVoiceForm" type="file" class="form-control" />
                                                    </div>
                                                </div>
                                                <!--Form Field-->
                                                <!--Readonly Field-->
                                                <div class="col-lg-6 col-12 mb-20">

                                                    <h6 class="mb-15">@SharedLocalizer["Turkmen"]</h6>

                                                    <div class="row mbn-15">
                                                        <label class="label">@SharedLocalizer["Upload Voice file"]</label>
                                                        <input asp-for="@Model.OtherVoiceForm" type="file" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-12 mb-20"><input type="submit" class="button button-primary" value="@SharedLocalizer["Edit"]"></div>
                                        @*<div class="box-foot items-end">
                        <input type="submit" class="btn btn-success" value="@SharedLocalizer["Add"]"></input>
                    </div>*@
                                    </div>
                                     </div>
                            </form>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>

                                                <th scope="col">@SharedLocalizer["Arab Voice"]</th>
                                                <th scope="col">@SharedLocalizer["Turkmen Voice"]</th>
                                                <th scope="col">@SharedLocalizer["Action"]</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (!string.IsNullOrEmpty(Model.ArabVoice) || !string.IsNullOrEmpty(Model.OtherVoice))
                                            {
                                            <tr>
                                                <td>
                                                    <audio id="myAudio@(@Model.Id)">
                                                        <source src="~/@Model.ArabVoice" type="audio/mpeg">
                                                    </audio>
                                                    <button onclick="playAudio('myAudio@(Model.Id)')">PLAY</button>
                                                    <button onclick="pauseAudio('myAudio@(Model.Id)')">STOP</button>
                                                </td>
                                                <td>
                                                    <audio id="myAudio@(Model.Id)_o">
                                                        <source src="~/@Model.OtherVoice" type="audio/mpeg">
                                                    </audio>
                                                    <button onclick="playAudio('myAudio@(Model.Id)_o')">PLAY</button>
                                                    <button onclick="pauseAudio('myAudio@(Model.Id)_o')">STOP</button>
                                                </td>
                                                <td>
                                                    <a asp-controller="Word" asp-area="Admin" asp-action="DeleteVoice" asp-route-id="@Model.Id"><i class="fa fa-trash"></i></a>
                                                </td>
                                            </tr>

                                            }
                                            else
                                            {
                                                <tr>
                                                    <td>
                                                        @SharedLocalizer["No data"]
                                                    </td>
                                                    <td>
                                                        @SharedLocalizer["No data"]
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--Form Wizard Horizontal End-->
</div>

@{ 
    string text = ViewBag.text;
}
@section Scripts{ 
<script>
    function playAudio(id) {

        var x = document.getElementById(id);
        x.play();
    }

    function pauseAudio(id) {

        var x = document.getElementById(id);
        x.pause();
    }
    </script>
}
