@inject IViewLocalizer Localizer;
@inject IHtmlLocalizer<SharedResource> SharedLocalizer


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @SharedLocalizer["Send email"]
            </h1>
        </div>
    </div>

    <div class="cold-12">
        <script src="~/js/custom.js"></script>
        <script src="~/js/tinymce/tinymce/js/tinymce/tinymce.min.js"></script>
        <div id="gridContainer">
            <form asp-action="SendEmail" id="form" enctype="multipart/form-data">
                <div class="col-md-12">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-row">
                        <div class="col-md-12">
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label>@SharedLocalizer["Email header"] </label>
                                <div id="header"></div>
                            </div>

                            <div class="form-group">
                                <label>@SharedLocalizer["Subject"] </label>
                                <div id="ind-name"></div>

                            </div>

                            <div class="form-group">
                                <label>@SharedLocalizer["Message"] *</label>
                                @*<textarea class="form-control" name="ProductTranslates[@lngIndex].FullDescription" rows="3" required></textarea>*@
                                <textarea class="editor-1" name="Message" rows="3"></textarea>
                            </div>
                            <br />


                            <script>

                                    $(function () {
                                         $("#adminEmail").dxTextBox({
                                            name: "AdminEmail",

                                        }).dxValidator({
                                            validationRules: [{
                                                type: "required",
                                                message: '@SharedLocalizer["Admin email is required"]'
                                            },
                                                {
                                                    type: "email",
                                                    message:'@SharedLocalizer["Admin email is invalid"]'

                                                }]
                                        });

                                        InitTinyMce('textarea.editor-1', '/api/images')

                                         $("#password").dxTextBox({
                                            name: "Password",
                                        }).dxValidator({
                                            validationRules: [{
                                                type: "required",
                                                message: '@SharedLocalizer["Enter password"]'
                                            }]
                                        });

                                         $("#header").dxTextBox({
                                            name: "Header",
                                        }).dxValidator({
                                            validationRules: [{
                                                type: "required",
                                                message: '@SharedLocalizer["Enter email header"]'
                                            }]
                                        });

                                        $("#ind-name").dxTextBox({
                                            name: "Subject",

                                        }).dxValidator({
                                            validationRules: [{
                                                type: "required",
                                                message: '@SharedLocalizer["Enter subject"]'
                                            }]
                                        });


                                        @*$("#description-editor").dxHtmlEditor({
                                            height: 250,
                                            toolbar: {
                                                items: [
                                                    "undo", "redo", "separator",
                                                    {
                                                        formatName: "header",
