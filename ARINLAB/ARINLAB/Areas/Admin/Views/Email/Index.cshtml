                                    });
                            </script>
                            <label>@SharedLocalizer["Send to"]: </label>
                            <div class="form-group">
                                <div id="sendToOrg"></div>
                            </div>
                            <div class="form-group">
                                <div id="sendToEnt"></div>
                            </div>
                            <div class="form-group">
                                <div id="sendToS"></div>
                            </div>
                        </div>

                    </div> <br />

                </div>
                <div class="dx-fieldset">

                    <br />

                    <div id="summary"></div>
                    <br />
                    <div id="button"></div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script>

            $(function () {
                $("#sendToOrg").dxCheckBox({
                value: true,
                text: '@SharedLocalizer["Users"]',
                    name: 'SendToOrdinary',
                });

               $("#sendToS").dxCheckBox({
                value: true,
                text: '@SharedLocalizer["Subsrcibers"]',
                      name: 'SendToSubscribers',
            });
             $("#button").dxButton({
                text: '@SharedLocalizer["Send"]',
                type: "success",
                useSubmitBehavior: true,
            });
            $("#summary").dxValidationSummary({});
    });
    </script>
}
