                                <label>@SharedLocalizer["Title"] *</label>
                                @*<input type="text" class="form-control" name="ProductTranslates[@lngIndex].ProductName" value="@prdT.ProductName" required />*@
                                <div id="TitleTM"></div>
                            </div>
